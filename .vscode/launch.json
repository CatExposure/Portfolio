    "version": "0.2.0",
    "configurations": [
        {
          "type": "node",
          "request": "launch",
          "name": "Server",
          "program": "${workspaceFolder}/Server/server.js",
          "envFile": "${workspaceFolder}/Server/.env"
        },
        {
            "type": "node-terminal",
            "command": "npm start --prefix ${workspaceFolder}/Client",
            "request": "launch",
            "name": "Client React",
          }
      ],
      "compounds": [
        {
          "name": "Server/Client",
          "configurations": ["Server", "Client React"],
          "stopAll": true
        }
      ]
}